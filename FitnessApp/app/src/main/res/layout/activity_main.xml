<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="charlyn23.fitnessapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/leaderboard"
            android:id="@+id/leaderboard"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/sneaker"
            android:id="@+id/sneaker"
            android:layout_weight="1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/accomplishments"
            android:background="@drawable/medal"
            android:layout_weight="1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/profile"
            android:background="@drawable/profile"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Steps Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/today"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/today"
        android:id="@+id/today"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/speedometer"
        android:id="@+id/speedometer"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/today"
        android:layout_alignStart="@+id/today" />

    <TextView
        android:text="Avg Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedometer"
        android:layout_alignLeft="@+id/speedometer"
        android:layout_alignStart="@+id/speedometer"
        android:id="@+id/speed" />

    <TextView
        android:text="Next 1,000 ft Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/goal"
        android:layout_marginTop="46dp"
        android:id="@+id/goal"
        android:layout_below="@+id/speed"
        android:layout_alignLeft="@+id/speed"
        android:layout_alignStart="@+id/speed" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/stepsTextView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50sp"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>
